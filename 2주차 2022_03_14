#===============문자열 슬라이싱 (slice)==================
print ("Hello"[0]);  #0번째 문자열이  출력
print ("Hello"[1]); #문자열첫번째 글자 출력 
print ("Hello"[-1]); #뒤에서 첫글자
print ("Hello"[0:3]); #0<= 범위 <3 까지 출력 

a=input(); #a 는 입력된 숫자를 가르킴
print (a); # a에 입력 된  숫저룰 츌력 

b=input("오늘 날짜를 입력 :")  #입력
print (b[0:4]);   #b 함수를 출력0번째 부터 4번재 까지  
print (b[5:7]);   #b 함수를 출력5번째 부터 7번재 까지  
print (b[8:10]);  #b 함수를 출력8번째 부터 10번재 까지  

print(b[0:4],"\n",b[5:7],"\n",b[8:10],"\n",); # 위에 잇는 내용을 한줄로  표현 

b=input("태어난연도 입력 :");
#b가 문자열인지 숫자 인지  알아보기
print( type(b)  );
print( b);
print ("당신의한국나이는  ",2022-int(b)+1,"살 만으로는 ", 2022-int(b),"입니다.");

============================입력하는 위치 수정 ====================================================
b=input("태어난연도 입력 :");
c=input("현재년도 입력 :");

print( type(b)  );
print ("당신의한국나이는  ",int(c)-int(b)+1,"살 만으로는 ", int(c)-int(b),"입니다.");



a= 1333; #a가 1333을 가리킴
a= 123;  #a가 123을 가리킴
a= a+100; #a가 가리키는것에  100을 더한 값을  a가 가리킴
print(a)  #현재 a는 223을 가리킴 , 그 값을 출력 

a-=3; #a가 가리키는 값에서  3을 뺌 ,그리고 그값을 가리킴
print(a)
a+=3; #a가 가리키는 값에서 3을 더함 ,그리고 그값을 가리킴
print(a)
b=100
#b가 100 을 가리킴
 


